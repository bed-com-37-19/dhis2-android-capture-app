<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="programType"
            type="org.dhis2.commons.filters.ProgramType" />

        <variable
            name="filterItem"
            type="org.dhis2.commons.filters.EventStatusFilter" />

        <variable
            name="workingListScope"
            type="androidx.databinding.ObservableField&lt;org.dhis2.commons.filters.data.WorkingListScope&gt;" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="@{workingListScope.isEventStatusActive() ? 0.65f : 1.0f}"
        tools:background="?colorPrimary">

        <include
            android:id="@+id/filterLayout"
            layout="@layout/item_header_filter"
            app:filterCount="@{filterItem.observeCount()}"
            app:filterItem="@{filterItem}"
            app:layout_constraintTop_toBottomOf="parent" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/filterLayout">

            <include
                android:id="@+id/filterStatus"
                layout="@layout/filter_status"
                app:filterItem="@{filterItem}"
                app:filterType="@{filterItem.type}"
                app:programType="@{filterItem.programType}" />
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>